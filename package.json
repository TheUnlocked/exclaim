{
  "name": "exclaim",
  "version": "0.1.0",
  "sideEffects": false,
  "scripts": {
    "pre-build": "npm run antlr4",
    "build:cli": "tsc",
    "build:full": "npm run pre-build && npm run build:cli",
    "bundle:cli": "webpack",
    "bundle:runtime": "cd runtime && webpack",
    "bundle:both": "concurrently \"npm:bundle:cli\" \"npm:bundle:runtime\"",
    "bundle:full": "npm run pre-build && npm run bundle:both",
    "watch:both": "concurrently \"npm:watch:cli\" \"npm:watch:runtime\"",
    "watch:cli": "webpack --watch",
    "watch:runtime": "cd runtime && webpack --watch",
    "clean": "rimraf build bundle",
    "test": "mocha",
    "lint": "eslint -c .eslintrc --ext .ts src test runtime/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "antlr4": "rimraf src/parser/generated && antlr4ts -visitor -o src/parser/generated grammar/Exclaim.g4 grammar/ExclaimLexer.g4 -Xexact-output-dir",
    "install:runtime": "cd runtime && npm install"
  },
  "devDependencies": {
    "@types/assert": "^1.5.4",
    "@types/minimist": "^1.2.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "assert": "^2.0.0",
    "concurrently": "^6.0.2",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.3.2",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "@jayrbolton/suffix-tree": "^0.0.1",
    "antlr4ts": "^0.5.0-alpha.4",
    "install": "^0.13.0",
    "minimist": "^1.2.5",
    "npm": "^7.11.2"
  }
}
